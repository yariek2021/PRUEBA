@model UserGetDto
@{
    ViewData["Title"] = "Mis datos";
}

<form asp-controller="User" asp-action="Update">



    <div class="form-group">
        <label for="Usuario">Usuario</label>
        <input asp-for="Usuario" class="form-control" type="email" placeholder="Correo electrónico" disabled>
    </div>

    <div class="form-group">
        <label for="FirstName">Nombre</label>
        <input asp-for="Alias" class="form-control" type="text" placeholder="Nombre">
    </div>


    <div class="form-group">
        <label for="IdColaborador">ID Colaborador</label>
        <input asp-for="Id" class="form-control" type="text" placeholder="ID Colaborador">
    </div>
    
    <button type="submit" class="btn btn-primary">Actualizar</button>
    <a href="~/" class="btn btn-light">Cancelar</a>

</form>
