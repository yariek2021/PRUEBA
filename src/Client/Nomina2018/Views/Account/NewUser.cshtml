@model Nomina2018.ViewModels.NewUserViewModel
@{
    ViewData["Title"] = "Nuevo usuario";
}

@*<h1 class="title">@ViewData["Title"]</h1>*@


    <div class="tab-content">
        <div class="tab-pane tabs-animation fade show active" id="tab-content-0" role="tabpanel">
            <div class="main-card mb-3 card">
                <div class="card-body">
                    <h5 class="card-title">Creación de usuarios</h5>
                    <form asp-controller="Account" asp-action="Create">
                        <div class="form-row">
                            <div class="col-md-6">
                                <div class="position-relative form-group">
                                    <label for="Email" class="">Email</label>
                                    <input asp-for="Email" class="form-control" type="email" placeholder="Correo electrónico" required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="position-relative form-group">
                                    <label for="Password" class="">Password</label>
                                    <input asp-for="Password" class="form-control" type="password" placeholder="Password" required>
                                </div>
                            </div>
                        </div>
                       
                            <button type="submit" class="btn btn-primary">Registrar</button>
                   
                       
                            <a href="~/" class="btn btn-default">Cancelar</a>
                      

                    </form>
</div>
            </div>
        </div>
    </div>



