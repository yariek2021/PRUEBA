@model List<UserRolesViewModel>

    @{
        var userId = ViewBag.userId;
        ViewBag.Title = "Roles del usuario: " + userId;
        ViewBag.menu_title = "Administrar";
        ViewBag.sub_menu_title = "Usuarios";
    }


    <div class="row">
        <div class="col-lg-12">
            <div class="main-card mb-3 card">
                <div class="card-body">
                    <form method="post">
                     

                            <div class="card-body">
                                @for (int i = 0; i < Model.Count; i++)
                                {
                                <div class="form-check m-1">
                                    <input type="hidden" asp-for="@Model[i].RoleId" />
                                    <input type="hidden" asp-for="@Model[i].RoleName" />

                                    @*<input asp-for="@Model[i].IsSelected" class="form-check-input" />
        <label class="form-check-label" asp-for="@Model[i].IsSelected">
            @Model[i].RoleName
        </label>*@

                                    <div class="custom-checkbox custom-control">
                                        <input asp-for="@Model[i].IsSelected" class="custom-control-input" />
                                        <label class="custom-control-label" asp-for="@Model[i].IsSelected">

                                            @Model[i].RoleName
                                            <i class="input-helper"></i>
                                        </label>
                                    </div>

                           

                                </div>
                                }
                                <div asp-validation-summary="All" class="text-danger"></div>
                            </div>
                            <div class="card-footer">
                                <input type="submit" value="Actualizar" class="btn btn-primary" style="width:auto" />
                                <a asp-action="EditUser" asp-route-id="@userId" class="btn btn-default" style="width:auto">Cancelar</a>
                            </div>
                    
                    </form>

                </div>
            </div>
        </div>
    </div>