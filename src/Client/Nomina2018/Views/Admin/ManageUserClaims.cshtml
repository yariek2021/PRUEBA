@model Nomina2018.ViewModels.UserClaimsViewModel
@{
    ViewBag.Title = "Permisos del usuario";
    ViewBag.menu_title = "Administrar";
    ViewBag.sub_menu_title = "Usuarios";
}


<form method="post">
    <div class="card">
        <div class="card-body">
            @for (int i = 0; i < Model.Cliams.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model.Cliams[i].ClaimType" />

                    @*<input asp-for="@Model.Cliams[i].IsSelected" class="form-check-input" />
                        <label class="form-check-label" asp-for="@Model.Cliams[i].IsSelected">
                            @Model.Cliams[i].ClaimType
                        </label>*@

                    <div class="form-check form-check-primary">
                        <label class="form-check-label" asp-for="@Model.Cliams[i].IsSelected">
                            <input asp-for="@Model.Cliams[i].IsSelected" class="form-check-input" />
                            @Model.Cliams[i].ClaimType
                            <i class="input-helper"></i>
                        </label>
                    </div>

                </div>
            }
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="card-footer">
            <input type="submit" value="Update" class="btn btn-primary btn-sm" style="width:auto" />
            <a asp-action="EditUser" asp-route-id="@Model.UserId" class="btn btn-primary btn-sm" style="width:auto">Cancelar</a>
        </div>
    </div>
</form>

