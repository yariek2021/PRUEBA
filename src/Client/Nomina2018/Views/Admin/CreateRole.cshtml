@model CreateRoleViewModel

@{
    ViewBag.Title = "Crear nuevo Role";
    ViewBag.menu_title = "Administrar";
    ViewBag.sub_menu_title = "Roles";
}

<form asp-action="CreateRole" method="post" class="mt-3">
    <div asp-validation-summary="All" class="text-danger">
    </div>
    <div class="form-group">
        <label asp-for="RoleName" ></label>
        
            <input asp-for="RoleName" class="form-control form-control-sm" placeholder="Nombre">
            <span asp-validation-for="RoleName" class="text-danger"></span>
      
    </div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary btn-sm" style="width:auto">
                Crear Role
            </button>
        </div>
    </div>
</form>